{{#each blogs as |blog| }}
<div>
    <div class="card">
        <div class="card-header">
            <h2>
                <a class="card-title" href="/blog/{{blog.id}}">{{blog.title}}</a>
            </h2>
            <p>Posted by {{user.username}} on {{format_date date_created}}</p>
        </div>

        <p class="card-body">
            {{blog.content}}
        </p>
    </div>
</div>
{{/each}}