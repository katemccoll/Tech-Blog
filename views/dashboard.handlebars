<div class="row">
    <header class="hero">
        <nav>
            <a href="/homepage">Home</a>
            <a href="/dashboard">Dashboard</a>
            <!-- Conditionally render login or logout links -->
            {{#if logged_in}}
                <button class="no-button" id="logout">Logout</button>
            {{else}}
                <a href="/login">Login</a>
            {{/if}}
        </nav>
        <h1 class="title">
            Your Dashboard
        </h1>
    </header>
    {{#if blogs.length}}
        {{#each blogs as |blog|}}

        {{/each}}

    {{else}}
    {{/if}}
    <div>
        <button class="btn btn-primary" type="submit">+ New Post</button>
    </div>
</div>

<script src="js/dashboard.js"></script>