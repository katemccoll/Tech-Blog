<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body">
        <div class="form-group">
            <label  class="form-label" for="blog-title">Title</label>
            <input class="form-input" type="textarea" id="blog-title" value="{{blog.title}}"/>
        </div>
        <div class="form-group">
            <label for="blog-content">Content</label>
            <textarea class="form-input" id="blog-content">{{blog.content}}</textarea>
        </div>
        <div class="form-group">
            <button id="update-blog" class="btn btn-primary">Update Post</button>
            <button id="delete-blog" class="btn btn-primary">Delete</button>
        </div>
    </form>
</div>

<script src="/js/editBlog.js"></script>