<div class="card">
    <h3 class="card-header">Sign Up</h3>

    <form class="form signup-form card-body">
        <div class="form-group">
            <label class="form-label" for="username-signup">Username:</label>
            <input class="form-input" type="text" id="username-signup" />
        </div>
        <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Sign Up</button>
        </div>
    </form>
    <p>
        <a id="login-link" href="/login">Login Instead</a>
    </p>
</div>

<script src="js/signup.js"></script>