<div class="card">
    <div class="card-header">
        <h2>{{title}}</h2>
        <p>Created by {{user.username}} on {{format_date date_created}}</p>
    </div>

    <p class="card-body">{{content}}</p>
 </div>

{{#if comments.length}}
    {{#each comments as |comment|}}
        <div class="card">
            <h2 class="card-header"></h2>
            <div class="card-body">
                <p>{{comment_content}}</p>
                <p>- {{user.username}}, {{format_date date_created}}</p>
            </div>
        </div>
    {{/each}}

{{else}}

    {{> add-comment }}

{{/if}}
